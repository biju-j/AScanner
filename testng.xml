<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite thread-count="2" name="SeleniumTes" parallel="none">
    <test name="Firefox">
        <parameter name="browser" value="firefox" />
        <parameter name="Port" value="9002" />
        <classes>
            <class name="HomeSuite" />
            <class name="PriceSuite" />
            <class name="SecuritySuite" />
        </classes>
    </test>
    <test name="Chrome">
        <parameter name="browser" value="chrome" />
        <parameter name="Port" value="9001" />
        <classes>
            <class name="HomeSuite" />
            <class name="PriceSuite" />
            <class name="SecuritySuite" />
        </classes>
    </test>
</suite>